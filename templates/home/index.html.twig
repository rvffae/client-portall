{% extends 'base.html.twig' %}

{% block body %}
<body class="index-body">
    <header class="index-header">
        <div class="index-logo">
            <img src="{{ asset('images/F.png') }}" alt="Logo FineDesk">
        </div>
        <div class="index-auth-buttons">
        <a href="{{ path('app_register') }}">Inscription</a>
        <a href="{{path('app_login')}}">Connexion</a>
        </div>
    </header>
    <section class="index-hero">
        <img src="{{ asset('images/F.png') }}" alt="Logo FineDesk">
        <h1>FineDesk</h1>
        <div class="p-5" style="font-size: 1.3em;">
            {% set strings = [
                'Votre portail client pour une gestion simplifiée et sécurisée.',
                'Bienvenue sur FineDesk ❤️',
                'Gestion simplifiée et sécurisée 📈🔐 ',
                'Contrôlez votre gestion 💻',
            ] %}
            <span
                data-controller="symfony--ux-typed"
                data-symfony--ux-typed-loop-value="true"
                data-symfony--ux-typed-show-cursor-value="true"
                data-symfony--ux-typed-cursor-char-value="|"
                data-symfony--ux-typed-strings-value="{{ strings|json_encode|e('html_attr') }}"
            ></span>
        </div>
    </section>
</body>
{% endblock %}