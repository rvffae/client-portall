{% extends 'base.html.twig' %}

{% block title %}Invoices{% endblock %}

{% block body %}
    <h1>Invoices</h1>
    <a href="{{ path('app_invoice_new') }}">Create New Invoice</a>
    <table>
        <thead>
            <tr>
                <th>Invoice Number</th>
                <th>Issue Date</th>
                <th>Due Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for invoice in invoices %}
                <tr>
                    <td>{{ invoice.invoice_number }}</td>
                    <td>{{ invoice.issue_date ? invoice.issue_date|date('Y-m-d') : '' }}</td>
                    <td>{{ invoice.due_date ? invoice.due_date|date('Y-m-d') : '' }}</td>
                    <td>{{ invoice.amount }}</td>
                    <td>{{ invoice.status }}</td>
                    <td>
                        <a href="{{ path('app_invoice_show', {'id': invoice.id}) }}">Show</a>
                        <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">Edit</a>
                        <form method="post" action="{{ path('app_invoice_delete', {'id': invoice.id}) }}" onsubmit="return confirm('Are you sure you want to delete this invoice?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
