{% extends 'base.html.twig' %}

{% block title %}Edit Invoice{% endblock %}

{% block body %}
    <div class="inv-global-container">
        <div class="inv-form-container">
            <h1 class="inv-form-title">Edit Invoice</h1>
            <form>
                <div class="inv-form-group">
                    <label for="invoice_number">Invoice Number</label>
                    <input type="text" id="invoice_number" name="invoice_number" value="2">
                </div>
                <div class="inv-form-group">
                    <label for="issue_date">Issue Date</label>
                    <input type="date" id="issue_date" name="issue_date" value="2025-06-27">
                </div>
                <div class="inv-form-group">
                    <label for="due_date">Due Date</label>
                    <input type="date" id="due_date" name="due_date" value="2025-07-04">
                </div>
                <div class="inv-form-group">
                    <label for="amount">Amount</label>
                    <input type="number" id="amount" name="amount" value="80">
                </div>
                <div class="inv-form-group">
                    <label for="status">Status</label>
                    <input type="text" id="status" name="status" value="Arrived">
                </div>
                <div class="inv-form-group">
                    <label for="project_id">Project ID</label>
                    <select id="project_id" name="project_id">
                        <option value="">Select Project</option>
                    </select>
                </div>
                <div class="inv-form-group">
                    <label for="products">Products</label>
                    <input type="text" id="products" name="products">
                </div>
                <div class="inv-form-actions">
                    <button type="submit" class="inv-update-btn">Update</button>
                </div>
            </form>
            <a href="{{ path('app_invoice_index') }}" class="inv-back-link">Back to list</a>
            <button class="inv-delete-btn" onclick="return confirm('Are you sure you want to delete this invoice?');">Delete</button>
        </div>
    </div>
{% endblock %}
