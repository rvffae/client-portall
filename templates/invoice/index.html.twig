{% extends 'base.html.twig' %}

{% block title %}Invoices{% endblock %}

{% block body %}
    <div class="inv-container">
        <h1 class="inv-title">Invoices</h1>
        <a href="{{ path('app_invoice_new') }}" class="inv-button-primary">Create New Invoice</a>

        <table class="inv-table">
            <thead>
                <tr>
                    <th>Invoice Number</th>
                    <th>Issue Date</th>
                    <th>Due Date</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for invoice in invoices %}
                    <tr>
                        <td>{{ invoice.invoiceNumber }}</td>
                        <td>{{ invoice.issueDate ? invoice.issueDate|date('Y-m-d') : '' }}</td>
                        <td>{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d') : '' }}</td>
                        <td>{{ invoice.amount }}</td>
                        <td>{{ invoice.status }}</td>
                        <td>{{ invoice.createdAt ? invoice.createdAt|date('Y-m-d') : '' }}</td>
                        <td>
                            <a href="{{ path('app_invoice_show', {'id': invoice.id}) }}" class="inv-link">Show</a>
                            <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}" class="inv-link">Edit</a>
                            <form method="post" action="{{ path('app_invoice_delete', {'id': invoice.id}) }}" onsubmit="return confirm('Are you sure you want to delete this invoice?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
                                <button type="submit" class="inv-delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
