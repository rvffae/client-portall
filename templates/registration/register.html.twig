{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<body class="register-body">
    <div class="register-container">
        <form class="register-form">
            <h1 class="register-h1">Enregistrement</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="register-field">
                    {{ form_label(registrationForm.email) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'register-input'}}) }}
                </div>
                <div class="register-field">
                    {{ form_label(registrationForm.plainPassword, 'Password') }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'register-input'}}) }}
                </div>
                <div class="register-checkbox">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                </div>

                <button type="submit" class="register-btn">S'enregistrer</button>
            {{ form_end(registrationForm) }}
        </form>
    </div>
</body>
{% endblock %}
