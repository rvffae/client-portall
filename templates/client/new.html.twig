{% extends 'base.html.twig' %}

{% block title %}Nouveau Client{% endblock %}

{% block body %}
<div class="client-container">
    <h1 class="client-main-title">➕ Ajouter un Nouveau Client</h1>
    
    <div class="client-form-container">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="client-btn client-btn-primary">Ajouter le Client</button>
        </div>
        {{ form_end(form) }}
    </div>
    
    <div class="client-nav-links">
        <a href="{{ path('app_client_index') }}" class="client-btn client-btn-secondary">← Retour à la liste</a>
    </div>
</div>
{% endblock %}