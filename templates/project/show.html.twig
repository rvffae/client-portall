{% extends 'base.html.twig' %}
{% block title %}Project{% endblock %}
{% block body %}
    <div class="project-global-container">
        <div class="project-show-container">
            <h1 class="project-show-title">Project</h1>
            <table class="project-show-table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ project.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ project.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ project.description }}</td>
                    </tr>
                    <tr>
                        <th>Start_date</th>
                        <td>{{ project.startDate ? project.startDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>End_date</th>
                        <td>{{ project.endDate ? project.endDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ project.status }}</td>
                    </tr>
                    <tr>
                        <th>Budget</th>
                        <td>{{ project.budget }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ project.updatedAt ? project.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('app_project_index') }}" class="project-show-back-link">Back to list</a>
            <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="project-show-edit-link">Edit</a>
            {{ include('project/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
