{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
<div class="company-container">
    <h1 class="company-main-title">Company</h1>
    <div class="company-table-container">
        <table class="company-detail-table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ company.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ company.name }}</td>
                </tr>
                <tr>
                    <th>Adress</th>
                    <td>{{ company.adress }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ company.city }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ company.state }}</td>
                </tr>
                <tr>
                    <th>Zip_code</th>
                    <td>{{ company.zipCode }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ company.country }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ company.phone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ company.email }}</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td>{{ company.website }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ company.createdAt ? company.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ company.updatedAt ? company.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="company-nav-links">
        <a class="company-btn company-btn-secondary" href="{{ path('app_company_index') }}">Back to list</a>
        <a class="company-btn company-btn-primary" href="{{ path('app_company_edit', {'id': company.id}) }}">Edit</a>
    </div>
    {{ include('company/_delete_form.html.twig') }}
</div>
{% endblock %}
